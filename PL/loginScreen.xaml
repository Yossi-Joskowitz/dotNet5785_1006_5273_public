<Window x:Class="PL.loginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        xmlns:local="clr-namespace:PL"
        xmlns:xaml="clr-namespace:XamlHelpers"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="loginScreen" Height="300" Width="400">

    <Border BorderThickness="2" BorderBrush="Black" CornerRadius="5" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Welcome to &quot;Soldier Support Community&quot;" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="16.5" Background="#FF9AA2D2" />
                <!-- Id -->
                <Label Grid.Row="1" Grid.Column="0"  Content="Enter ID:" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="60,0,0,5" Padding="0"  FontWeight="Bold" FontSize="15"/>
                <TextBox Grid.Row="1" Grid.Column="1"  Margin="0,0,0,5"  TextWrapping="Wrap"  Width="120" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                     Text="{Binding UserId,UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"  ToolTipService.InitialShowDelay="1000" ToolTipService.ShowDuration="5000" ToolTip = "Enter ID"/>

                <!-- Password -->
                <Label Grid.Row="2" Grid.Column="0" Content="Enter password:" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="60,5,0,0" FontWeight="Bold" Padding="0" FontSize="15" Height="Auto" Width="auto"/>
                <PasswordBox  Width="120"  Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" xaml:Secure.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTipService.InitialShowDelay="1000" ToolTipService.ShowDuration="5000" ToolTip = "Enter a password"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"
                     Text="{Binding Password,UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                     Visibility="{Binding IsPasswordVisible, Converter={StaticResource BooleanToVisibilityConverterKey}}"/>
                <CheckBox IsChecked="{Binding IsPasswordVisible ,Mode=TwoWay}" Grid.Column="1" Grid.Row="2" Content="Show password" HorizontalAlignment="Left" Margin="0,0,0,5" VerticalAlignment="Bottom"
                        ToolTipService.InitialShowDelay="1000" ToolTipService.ShowDuration="5000" ToolTip = "Check to see the password"/>

            </Grid>
            <!-- Manager and Volunteer Buttons -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button  Grid.ColumnSpan="2" Content="Login" Click="LoginButton_Click" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="120"
                        Visibility="{Binding IsManager, Converter={StaticResource BooleanToVisibilityFalseConverterKey}}" />

                <Button  Grid.Column="0" Content="Enter as Manager" Click="OpenManagerWindow_Click" FontWeight="Bold"
                        Visibility="{Binding IsManager, Converter={StaticResource BooleanToVisibilityConverterKey}}" Height="40" Width="130" HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                         BorderBrush="{TemplateBinding BorderBrush}" 
                                         BorderThickness="{TemplateBinding BorderThickness}" 
                                         CornerRadius="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button  Grid.Column="1" Content="Enter as Volunteer" Click="OpenVolunteerWindow_Click" FontWeight="Bold"
                        Visibility="{Binding IsManager, Converter={StaticResource BooleanToVisibilityConverterKey}}"  Height="40" Width="130" HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
            <Image Source="image/image5.jpeg" Grid.ColumnSpan="2" Grid.RowSpan="2" Opacity="0.1" Stretch="Fill" Canvas.ZIndex="-1"  />
        </Grid>
    </Border>
</Window>