<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        mc:Ignorable="d"
        Title="CallWindow" Height="560" Width="400"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Border BorderBrush="Black" BorderThickness="2"  CornerRadius="5" Margin="20">
        <Grid>
            <Image  Source="/image/image5.jpeg" Grid.ColumnSpan="2" Grid.RowSpan="10"  Opacity="0.1" Stretch="Uniform" Canvas.ZIndex="-1"  />


            <Grid Margin="30,30,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- ID -->
                <Label Content="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" FontWeight="ExtraBold"/>
                <TextBox Text="{Binding Call.Id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="0" Grid.Column="1" Width="auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2" IsReadOnly="True" />

                <!-- Type -->
                <Label Content="Type:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" FontWeight="ExtraBold"/>
                <ComboBox SelectedValue="{Binding Call.Type, Mode=TwoWay}"
                     IsEditable="False"
                     ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey}}"
                     Grid.Row="1" Grid.Column="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     MinWidth="30"
                     Margin="2" />

                <!-- Verbal Description -->
                <Label Content="Description:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" FontWeight="ExtraBold"/>
                <TextBox Text="{Binding Call.VerbalDescription, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="2" Grid.Column="1" MinWidth="30" TextWrapping="Wrap" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"/>

                <!-- Full Address -->
                <Label Content="Address:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" FontWeight="ExtraBold"/>
                <TextBox Text="{Binding Call.FullAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="3" MinWidth="30" Grid.Column="1" VerticalAlignment="Center" Width="auto" HorizontalAlignment="Left" Margin="5" />


                <!-- Opening Time -->
                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ButtonText}" Value="Add">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Label Content="Opening Time:"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" FontWeight="ExtraBold"/>
                    <TextBox Text="{Binding Call.OpeningTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" MinWidth="30" VerticalAlignment="Center" Width="auto" HorizontalAlignment="Right" IsReadOnly="True"/>
                </StackPanel>

                <!-- Max Time -->
                <Label Content="Max Time:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" FontWeight="ExtraBold"/>
                <DatePicker SelectedDate="{Binding Call.MaxTime, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"/>
               
                <!-- Status Type -->
                <Label Content="Status:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" FontWeight="ExtraBold"/>
                <TextBox Text="{Binding Call.StatusType, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="6" MinWidth="30" Grid.Column="1" Width="auto" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="2" IsReadOnly="True"/>



                <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Call.AssignInList.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Call.AssignInList}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>


                    <Label Content="Assignments:"  Grid.Column="0"  Margin="1" Height="auto"  FontWeight="ExtraBold" Grid.RowSpan="2"/>
                    <DataGrid ItemsSource="{Binding Call.AssignInList}" 
                         Grid.ColumnSpan="2" 
                         AutoGenerateColumns="True" 
                         VerticalAlignment="Bottom" 
                         HorizontalAlignment="Stretch" 
                         Margin="2" 
                         Height="100" Width="auto" 
                         IsReadOnly="True" />
                </StackPanel>
                <!-- Submit Button (Add/Update Call) -->
                <Button Content="{Binding ButtonText}" Height="30" Width="70" Click="AddOrUpdateButten_Click" Grid.Row="8" Grid.ColumnSpan="2"  HorizontalAlignment="Center"
                 ToolTipService.InitialShowDelay="100" ToolTipService.ShowDuration="5000" ToolTip = "Tap to Add or Update"/>
            </Grid>

        </Grid>
    </Border>

</Window>